{
    "productName": "bu-player",
    "version": "0.1.0",
    "identifier": "bu-player",
    "build": {
        "beforeDevCommand": "bun run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "bun run build",
        "frontendDist": "../build"
    },
    "app": {
        "windows": [
            {
                "title": "bu-player",
                "width": 600,
                "height": 800
            }
        ],
        "security": {
            "csp": "null",
            "assetProtocol": {
                "enable": true,
                "scope": [
                    "*/**"
                ]
            }
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}